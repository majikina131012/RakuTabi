<h1>複数日投票</h1>

<%= form_with url: group_votes_path(@group), method: :post do %>
  <div>
    <%= label_tag :user_name, "名前" %>
    <%= text_field_tag :user_name %>
  </div>

  <%= month_calendar do |date| %>
    <div class="day-cell">
      <%= date.day %><br>

      <%= radio_button_tag "days[#{date}]", "◯" %> ○
      <%= radio_button_tag "days[#{date}]", "✕" %> ✕
      <%= radio_button_tag "days[#{date}]", "△" %> △
    </div>
  <% end %>

  <%= submit_tag "投票する" %>
<% end %>
