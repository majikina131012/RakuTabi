<h3>日程候補</h3>

<table class="table table-bordered text-center align-middle">
  <thead class="table-light">
    <tr>
      <th>日程</th>
      <th>◯</th>
      <th>△</th>
      <th>✕</th>
    </tr>
  </thead>
  <tbody>
    <% @votes_by_day.each do |(day, time), votes| %>
      <tr class="<%= 'table-success' if votes[:maru].any? %>">
        <td><%= day.strftime('%-m/%-d(%a)') %> <%= time %></td>

        <td>
          <% if votes[:maru].any? %>
            <%= votes[:maru].join('<br>').html_safe %>
          <% else %>
            －
          <% end %>
        </td>

        <td>
          <% if votes[:sankaku].any? %>
            <%= votes[:sankaku].join('<br>').html_safe %>
          <% else %>
            －
          <% end %>
        </td>

        <td>
          <% if votes[:batsu].any? %>
            <%= votes[:batsu].join('<br>').html_safe %>
          <% else %>
            －
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row justify-content-center text-center">
  <div class="col-12">
    <%= link_to "投票する", new_group_vote_path(@group), class: "btn btn-outline-success btn-block mt-3 mb-3" %>
  </div>
</div>

<div class="row justify-content-center text-center">
  <div class="col-12">
    <%= link_to "グループに戻る", group_path(@group.id), class: "btn btn-outline-secondary mt-3 btn-block" %>
  </div>
</div>