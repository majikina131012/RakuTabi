<%= render 'header', group: @group %>

<div class="row justify-content-center text-center">
  <h2><%= @group.name %></h2>
</div>


<div class="border text-center my-3 translate-middle">
    <a class="text-dark text-decoration-none" data-toggle="collapse" href="#memberList" role="button" aria-expanded="false" aria-controls="memberList">
      メンバーを見る
    </a>
</div>


<div class="collapse" id="memberList">
  <!-- メンバー一覧 -->
  <div class="row justify-content-center text-center mb-3">
    <% @group.users.each do |user| %>
      <div class="col-xl-1 col-md-2 col-3">
        <%= user.name %>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center text-center mb-4">
    <%= form_with model: @user, url: group_users_path(@group.id), local: true do |f| %>
      <div class="form-row justify-content-center">
        <div class="col-12 col-md-6 mb-2">
          <%= f.text_field :name, class: "form-control text-center", required: true, placeholder: "新規メンバー" %>
        </div>
        <div class="col-12 col-md-6 mb-2">
          <%= f.submit "追加する", class: "btn btn-outline-secondary btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


  <% if @expense.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@expense.errors.count, "エラー") %>があります:</h4>
      <ul>
        <% @expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row justify-content-center text-center">
    <h4>精算を追加</h4>
  </div>

  <%= form_with model: @expense, url: group_expenses_path(@group.id), local: true do |f| %>
    <div class="row justify-content-center text-center">

      <div class="col-5">
        <div class="form-group">
          <%= f.select :payer_id, options_from_collection_for_select(@members, :id, :name), {}, class: "form-control" %>
        </div>
      </div>

      <div class="col-5">
        が
      </div>

    </div>
    
    <div class="row justify-content-center text-center">
    <div class="col-10">
      <div class="form-group">
        <%= f.collection_check_boxes(:user_ids, @members, :id, :name) do |b| %>
          <div class="form-check form-check-inline my-2">
            <%= b.check_box(class: "form-check-input", style: "transform: scale(1.5); margin-right: 8px;") %>
            <%= b.label(class: "form-check-label") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  

    <div class="row justify-content-center text-center">

      <div class="col-2">
        の
      </div>

      <div class="col-8">
        <div class="form-group">
          <%= f.text_field :description, class: "form-control w-70 text-center", required: true, placeholder: "ガソリン代" %>
        </div>
      </div>

      <div class="col-2">
        を
      </div>

    </div>

    <div class="row justify-content-center text-center">

      <div class="col-6">
        <div class="form-group">
          <%= f.number_field :amount, class: "form-control text-center", required: true, placeholder: "￥5,000" %>
        </div>
      </div>

      <div class="col-1">
        で
      </div>

      <div class="col-5">
        <%= f.submit "支払った", class: "btn btn-outline-secondary btn-block" %>
      </div>

    </div>
<% end %>

<h4>精算結果</h4>
<% if @settlements.present? %>
  <ul class="list-group">
    <% @settlements.each do |s| %>
      <li class="list-group-item">
        <%= s[:from].name %> が <%= s[:to].name %> に
        <%= number_to_currency(s[:amount].ceil, unit: "円", precision: 0) %> 支払う
      </li>
    <% end %>
  </ul>
<% else %>
  <p>精算は必要ありません</p>
<% end %>

  <div class="row justify-content-center text-center">
    <div class="col-12">
      <%= link_to "精算をリセット", destroy_all_group_expenses_path(@group.id), method: :delete, data: { confirm: '本当に全てリセットしますか？' }, class: "btn btn-outline-danger btn-block mt-3" %>
    </div>
  </div>


