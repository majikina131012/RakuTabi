<h2>グループを作成</h2>

<div class='row'>
  <div class='col-xl-12'>
  
    <%= form_with model: @group, local: true do |f| %>

      <div class="form-group mt-3">
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <%= f.submit "作成する", class: "btn btn-outline-secondary btn-block" %>
    <% end %>

  </div>
</div>

<div class='row mt-3'>
  <div class='col-xl-12'>
    <%= link_to 'グループ一覧', groups_path, class: "btn btn-outline-secondary btn-block" %>
  </div>
</div>

<div class='row mt-3'>
  <div class='col-xl-12'>
    <%= link_to "使い方を見る", about_path, class: "btn btn-outline-secondary btn-block" %>
  </div>
</div>