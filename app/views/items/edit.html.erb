<div class="row">
  <div class="col-12">
    <%= render 'groups/header', group: @group %>
  </div>
</div>

<div class="row justify-content-center text-center mt-3">
  <h2>持ち物編集</h2>
</div>

<%= form_with model: @item, url: group_item_path(@group.id) do |f| %>

  <div class="form-group">
    <%= f.label :name, "持ち物", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <%= f.submit "変更", class: "btn btn-outline-success btn-block" %>

<% end %>

<%= link_to "削除", group_item_path(@group.id, @item.id), method: :delete, class: "btn btn-outline-danger btn-block mt-5", data: { confirm: '本当に削除しますか？'} %>

<%= link_to "持ち物リストに戻る", group_items_path(@group.id), class: "btn btn-outline-secondary btn-block mt-5" %>