<h2>持ち物一覧</h2>


<table>
  <thead>
    <tr>
      <th>持ち物</th>
      <th>持ってくる人</th>
      <th></th>
    </tr>
  </thead>

  <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item.name %></td>
        <td>ユーザー名</td>
        <td><%= link_to "編集", edit_group_item_path(@group.id, item.id) %>
        <td><%= link_to "削除", group_item_path(@group.id, item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<%= form_with model: @item, url: group_items_path(@group.id), local: true do |f| %>

  <div class="form-group">
    <%= f.label :name, "持ち物", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <%= f.submit "登録する", class: "btn btn-primary btn-block" %>

<% end %>