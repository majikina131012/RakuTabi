<div class="row">
  <div class="col-12">
    <%= render 'groups/header', group: @group %>
  </div>
</div>

<div class="row justify-content-center text-center mt-3">
  <h2>ユーザー編集</h2>
</div>  

  <%= form_with model: @user, url: group_user_path(@group.id, @user.id) do |f| %>
    <h4>名前</h4>
    <%= f.text_field :name, class: "form-control text-center", placeholder: "名前を入力" %>
    <%= f.submit '名前の変更', class:"btn btn-outline-success btn-block mt-3" %>
  <% end %>

