<div class="row">
  <div class="col-12">
    <%= render 'groups/header', group: @group %>
  </div>
</div>

<div class="row justify-content-center text-center mt-3">
  <h2>ユーザー編集</h2>
</div>  

  <%= form_with model: @user, url: group_user_path(@group.id, @user.id) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :name %>
    <%= f.submit '更新' %>
  <% end %>

  <%= link_to "ユーザー削除", group_user_path(@group.id, @user.id), method: :delete, "data-confirm" => "本当にユーザーを削除しますか？"%>
